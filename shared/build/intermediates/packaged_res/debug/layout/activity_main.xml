<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kotlinmultiplatformsharedmodule.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:id="@+id/uk_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/uk_flag"
                android:text="@string/united_kingdom"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/spain_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/spain_flag"
                android:text="@string/spain"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="@+id/uk_button"
                app:layout_constraintTop_toBottomOf="@+id/uk_button" />

            <Button
                android:id="@+id/ireland_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ireland_flag"
                android:text="@string/ireland"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/spain_button"
                app:layout_constraintTop_toBottomOf="@+id/spain_button" />

            <Button
                android:id="@+id/slovenia_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/slovenia_flag"
                android:text="@string/slovenia"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/ireland_button"
                app:layout_constraintTop_toBottomOf="@+id/ireland_button" />

            <Button
                android:id="@+id/finland_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/finland_flag"
                android:text="@string/finland"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/slovenia_button"
                app:layout_constraintTop_toBottomOf="@+id/slovenia_button" />
        </GridLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>